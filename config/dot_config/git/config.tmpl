[user]
    name  = Alberto G. JÃ¡come
    email = {{ .gitEmail }}
    signingkey = {{ .gitSigningKey }}

[github]
    user = agjacome

[core]
    autocrlf     = input
    editor       = nvim
    excludesfile = ~/.config/git/ignore
    pager        = less
    whitespace   = trailing-space,space-before-tab,indent-with-non-tab

[color]
    ui = true
[commit]
    gpgsign = true
[diff]
    algorithm = histogram
    tool = nvimdiff
[difftool]
    prompt = false
[fetch]
    prune = true
[help]
    autocorrect = 1
[init]
    defaultBranch = main
[merge]
    conflictstyle = zdiff3
    tool = nvimdiff
[pull]
    rebase = true
[push]
    default = simple
    autoSetupRemote = true
[rebase]
    autosquash = true
    autostash = true
    updateRefs = true
[rerere]
    enabled = true

[alias]
    aa     = add --all
    amend  = commit --amend
    dst    = diff --staged
    lg     = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ch) %C(bold blue)%Creset' --abbrev-commit
    noff   = merge --no-ff
    pullff = pull --ff-only
    st     = status --short --branch
