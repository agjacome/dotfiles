[general]
ui         = TTY.TTYUI
accounts   = gmail
pythonfile = ~/var/mail/offlineimap.py
fsync      = false

[mbnames]
enabled  = yes
filename = ~/var/mail/mailboxes
header   = "mailboxes "
peritem  = "+%(accountname)s/%(foldername)s"
sep      = " "
footer   = "\n"

[Account gmail]
localrepository  = gmail-local
remoterepository = gmail-remote

[Repository gmail-local]
type         = Maildir
localfolders = ~/var/mail/gmail
nametrans    = translate_local

[Repository gmail-remote]
type           = Gmail
remoteuser     = agjacome@gmail.com
remotepass     = PASSWORD
nametrans      = translate_remote
realdelete     = no
maxconnections = 5
postsynchook   = notmuch new
sslcacertfile  = /etc/ssl/certs/ca-certificates.crt
ssl_version    = tls1_2
