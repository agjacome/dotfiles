#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

declare -r is_docked=${1:-$($HOME/.local/bin/_xutils/is-docked)}

xset r rate 175 50
xset s off -dpms

if [[ $is_docked == "true" ]]; then
    xrandr --output DP-3 --off --output DP-0 --primary --mode 5120x1440
else
    xrandr --output DP-3 --primary --mode 3840x2160 --output DP-0 --off
fi
