#!/usr/bin/env bash

alias ls="ls --group-directories-first --color=auto -hv"
alias grep="rg --color=auto -I"

alias ..="cd .."
alias ...="cd ../../"

alias l="ls"
alias l1="ls -1"
alias ll="ls -l"
alias la="ls -al"

alias cp="cp -ir"
alias mv="mv -i"
alias rm="rm -Iv"

alias df="df -hT"
alias mkdir="mkdir -pv"

alias s="yay -Ss"
alias i="yay -S"
alias syu="yay -Syu --timeupdate --devel"

alias ta="systemd-run --scope --user tmux attach-session"
alias tn="systemd-run --scope --user tmux new-session"
alias mux="systemd-run --scope --user tmuxinator"

alias ssh="TERM=xterm-256color ssh"
