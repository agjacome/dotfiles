alias ls="ls --group-directories-first --color=auto -hv"
alias grep="grep --color=auto -I"

alias ..="cd .."
alias ...="cd ../../"

alias l="ls"
alias la="ls -a"
alias l1="ls -1"
alias l1a="ls -a1"
alias ll="ls -l"
alias lla="ls -al"

alias cp="cp -ir"
alias mv="mv -i"
alias rm="rm -Iv"

alias df="df -hT"
alias mkdir="mkdir -pv"

alias s="pacman -Ss"
alias i="sudo pacman -S"
alias syu="yaourt -Syu --aur"

alias ta="tmux attach-session"
alias tn="tmux new-session"

alias git="LANG=en_US.UTF-8 git"
alias ssh="TERM=xterm-256color ssh"

eval $(thefuck --alias)

