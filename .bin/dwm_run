#!/bin/bash

# source xinitc.d scripts
if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/*; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

# output throug active monitor
$HOME/.bin/hotplug-mon

# add font paths
xset fp default
[[ -d /usr/share/fonts/local ]] && xset +fp /usr/share/fonts/local
[[ -d $HOME/.fonts ]] && xset +fp $HOME/.fonts
xset fp rehash

# load .Xresources
[[ -f $HOME/.Xresources ]] && xrdb -merge $HOME/.Xresources

# Java workaround
wmname LG3D

# set background and statusbar
$HOME/.bin/background &
$HOME/.bin/dwm_status &

# start DWM
/usr/bin/dwm 2> /tmp/dwm.log
