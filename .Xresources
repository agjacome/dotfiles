! X settings
Xft.antialias : 1
Xft.autohint  : 0
Xft.dpi       : 96
Xft.hinting   : 1
Xft.hintstyle : hintfull
Xft.lcdfilter : lcddefault
Xft.rgba      : rgb
Xcursor.theme : Simple-and-Soft

! Colorscheme
#include "/home/agjacome/.config/term_colors"

! URxvt settings
URxvt.scrollstyle     : rxvt
URxvt.scrollBar       : off
URxvt.urgentOnBell    : true
URxvt.visualBell      : false
URxvt.cursorBlink     : false
URxvt.cursorUnderline : false

! URxvt extensions
URxvt.perl-ext-common      : default,clipboard,keyboard-select,url-select
URxvt*keysym.Home          : \033[1~
URxvt*keysym.End           : \033[4~
URxvt.keysym.M-c           : perl:clipboard:copy
URxvt.keysym.M-v           : perl:clipboard:paste
URxvt.keysym.M-C-v         : perl:clipboard:paste_escaped
URxvt.keysym.M-Escape      : perl:keyboard-select:activate
URxvt.keysym.M-s           : perl:keyboard-select:search
URxvt.keysym.M-u           : perl:url-select:select_next
URxvt.clipboard.copycmd    : xsel -ib
URxvt.clipboard.pastecmd   : xsel -ob
URxvt.url-select.autocopy  : true
URxvt.url-select.button    : 1
URxvt.url-select.launcher  : /usr/bin/firefox
URxvt.url-select.underline : true

! URxvt font-style
URxvt.font        : xft:Liberation Mono for Powerline:size=12
URxvt.letterSpace : -2
