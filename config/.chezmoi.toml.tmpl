{{ $passphrase := promptStringOnce . "passphrase" "Chezmoi passphrase" -}}

encryption = "gpg"

[data]
  nixBinPath = "{{ .chezmoi.homeDir }}/.nix-profile/bin"
  pinentry = "{{ .nixBinPath }}/pinentry"

[git]
  autoPush = false
  autoCommit = false

[gpg]
  symmetric = true
  args = ["--batch", "--passphrase", {{ $passphrase | quote }}, "--no-symkey-cache", "--quiet"]

