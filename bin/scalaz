#!/bin/bash
set -euo pipefail

pushd "$(mktemp -dt)"
cat > build.sbt <<EOM
scalaVersion := "2.12.3"

scalacOptions ++= Seq(
  "-deprecation",
  "-feature",
  "-language:existentials",
  "-language:higherKinds",
  "-language:implicitConversions",
  "-unchecked",
  "-Xfuture",
  "-Xlint",
  "-Yno-adapted-args",
  "-Ywarn-numeric-widen"
)

libraryDependencies ++= Seq(
  "org.scalaz" %% "scalaz-core"               % "7.2.15",
  "org.scalaz" %% "scalaz-effect"             % "7.2.15",
  "org.scalaz" %% "scalaz-concurrent"         % "7.2.15",
  "org.scalaz" %% "scalaz-scalacheck-binding" % "7.2.15"
)

initialCommands := "import scalaz._, Scalaz._"

shellPrompt := { _ => "scalaz Â» " }
EOM

sbt console
popd
